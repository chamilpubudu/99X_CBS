@model IEnumerable<_99X_CBS.Models.CBS_Trainings>

@{
    ViewBag.Title = "Index";
}
<link href="../../../../Content/Profile.css" rel="stylesheet" />
<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Training_Provider)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Training_Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Training_Month)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time_Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Investment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Training_Focus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ForeignOrLocal)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (@Html.Raw(item.Approved).ToString() == "False")
        {
            @:<tr class="approvedraw">
        }
        <td>
            @Html.DisplayFor(modelItem => item.Employee_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Training_Provider)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Training_Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Training_Month)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time_Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Investment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmpID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Training_Focus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ForeignOrLocal)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID })
            @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("CBS_Trainings_Manage"))
            {
                @Html.Raw("|")
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            }
        </td>
        @:</tr>
    }
</table>
